<%- include('partials/layout') %>

<main>
  <h2 class="page-header">Create a new post</h2>

  <form action="" method="POST" class="form form-post">
    <%- include('partials/errors') %> 
    <div class="form-group">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Enter Title"
        required
        value="<%= typeof post !== 'undefined' ? post.title : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea
        class="form-control"
        id="content"
        name="content"
        rows="5"
        cols="30"
        placeholder="Enter Content"
        required><%= typeof post !== 'undefined' ? post.content : null %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

</body>
</html>