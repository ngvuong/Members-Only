<%- include('partials/layout') %> 

<main>
  <h2 class="page-header">Become an Admin</h2>

  <% if(locals.errors) {%>
    <div class="alert-container">
      <input type="checkbox" id="dismiss">
      <label for="dismiss">Ã—</label>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error.msg %></p>
        <% }) %>
      </div>
    </div>
  <% } %>

  <form action="" method="POST" class="form form-admin">
    <div class="form-group">
      <label for="password">Admin Acccess Code</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter code"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

</body>
</html>
